@model ProiectTaskManagement.Models.Entities.Project
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-5">Taskuri Proiect @Model.Title</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            <br />

            @foreach (var status in Model.Tasks)
            {
                <div class="card">
                    <div class="card-body">
                        <partial name="TaskDetails" model="status" />
                    </div>
                </div>
                <br />
            }
        </div>
    </div>
</div>

